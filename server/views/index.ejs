<!doctype html>
<html>
<head>
    <title>Strength App Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        .cf{
          padding: 0px;
        }
        .mainLogin {
          background-image: url('assets/lifter.jpg');
          background-repeat: no-repeat;
          background-size: 700px;
          background-color: black;
          background-position: center;
          width: 100%;
          height: 100vh;
          padding-top: 100px;
        }
        .loginWindow{
          padding-top: 50px;
          padding-bottom: 50px;
          width: 100%;
          background-color: rgba(255,255,255,0.2);
          border-radius: 30px;
          color: white;
        }
        .loginWindow > a{
          width: 100%;
          margin-bottom: 10px;
        }
        .loginbtn{
          width: 100%;
        }
        .signupbtn{
          color: white;
          margin-bottom: 30px;
        }
    </style>
</head>
<body>
<div class="container-fluid cf">
  <div class="col-md-12 mainLogin">
    <div class="col-sm-6 offset-3 loginWindow">

      <form action="/login" method="post">
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
          </div>

          <button type="submit" class="btn btn-warning btn-lg loginbtn">Login</button>
      </form>

      <a href="/signup" class="btn btn-default signupbtn"> Local Signup</a>
      <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
      <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
      <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>
    </div>
  </div>
</div>

</body>
</html>
